<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask TaskName="GenerateScript" AssemblyFile="$(MSBuildThisFileDirectory)Bridge.Build.dll" />

  <PropertyGroup>
    <NoStdLib>True</NoStdLib>
	<AddAdditionalExplicitAssemblyReferences>false</AddAdditionalExplicitAssemblyReferences>
    <AdditionalExplicitAssemblyReferences />
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Bridge.Foundation.dll">
      <HintPath>$(MSBuildThisFileDirectory)Bridge.Foundation.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="AfterBuild">
    <GenerateScript
      OutputPath="$(OutputPath)"
	  Configuration="$(Configuration)"
      Assembly="@(IntermediateAssembly)"
	  AssembliesPath="$(MSBuildThisFileDirectory)"
      ProjectPath="$(MSBuildProjectFullPath)">
    </GenerateScript>
  </Target>
</Project>
